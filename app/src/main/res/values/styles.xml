<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Question Box -->
    <style name="questionBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padQuestBox</item>
        <item name="android:layout_marginTop">@dimen/margTopQuestBox</item>
        <!-- Disable pop up keyboard at the beginning -->
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- Question Text -->
    <style name="questionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightQuestText</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorQuestText</item>
        <item name="android:scaleX">1.3</item>
        <item name="android:scaleY">1.3</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/padQuestText</item>
        <item name="android:textSize">@dimen/textSizeQuestText</item>
    </style>

    <!-- Radio Group-->
    <style name="radioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Radio Button & CheckBoxes-->
    <style name="radioButton_checkBoxes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/butTintColor</item>
        <item name="android:textColor">@color/textColorRadioCheckBut</item>
    </style>

    <!-- Edit Text -->
    <style name="textField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorEditText</item>
        <item name="android:backgroundTint">@color/backTintEditText</item>
        <item name="android:layout_marginLeft">@dimen/margLeftEditText</item>
        <item name="android:layout_marginRight">@dimen/margRightEditText</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Inner Linear Layout -->
    <style name="innerLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightInnerLinear</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Answer & Reset Button Style -->
    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/quest6</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/backColorBut</item>
        <item name="android:drawablePadding">@dimen/drawPadBut</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/padBut</item>
        <item name="android:textSize">@dimen/textSizeBut</item>
    </style>


</resources>
